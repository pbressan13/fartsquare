<div class="container my-5">
  <h2>Criar nova conta</h2>
  <%= link_to "Entre com o Google", user_google_oauth2_omniauth_authorize_path(:google_oauth2) %>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "name" }%>
      <%= f.input :social_sec_no,
                  label: "CPF",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "cpf" }%>
      <%= f.input :password,
                  label: "Senha",
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label: "Confirme sua senha",
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :birthdate,
                  label: "Data de nascimento",
                  as: :string,
                  placeholder: "dd/mm/yyyy",
		              input_html: {type: :date},
                  required: true,
                  :order => [:day, :month, :year] %>
      <%= f.input :street_address,
                  label: "EndereÃ§o completo",
                  required: true,
                  input_html: { autocomplete: "address" }%>
      <%= f.input :avatar,
                  label: "Foto do perfil",
                  as: :file,
                  required: true %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Cadastrar", class: "btn-ghost" %>
    </div>
  <% end %>
  <br>
  <%= render "devise/shared/links" %>
</div>
